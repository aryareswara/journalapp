<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedCornerImage" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">70dp</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/rounded_corner_4</item>
        <item name="android:backgroundTint">@color/primary_background</item>
        <item name="android:fontFamily">@font/playfair_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextChip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/playfair_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChipStyleStatic" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/secondary_button</item>
        <item name="android:textColor">@color/primary_button</item>
        <item name="android:gravity">center</item>
    </style>

</resources>